<div class="col-md-4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Edit Note</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">  <!-- aqui le dice q el metodo de consulta es put cuando actualiza la nota -->
                <input type="hidden" name="_method" value="PUT">    <!-- input hidden para que no se vea recibe _method para que valide por el middleware que ya se creo en indes.js valor put es para que actualice -->
                <div class="form-group">
                    <input type="text" class="form-control" name="title" placeholder="Title" value="{{note.title}}">
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control">{{note.description}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>