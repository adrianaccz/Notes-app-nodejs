<div class="row">
    {{#each notes}}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between aling-items-center">
                        {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a> <!-- para editar solo por id y no todas las notas -->
                    </h4>
                    <p>{{description}}</p>
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">  <!-- aqui le dice q el metodo de consulta es delete cuando actualiza la nota -->
                        <input type="hidden" name="_method" value="DELETE">    <!-- input hidden para que no se vea recibe _method para que valide por el middleware que ya se creo en index.js valor delete es para que elimine -->
                        <button class="btn btn-danger btn-bloc btn-sm" type="submit">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    {{else}}
        <div class="card mx-auto">
            <div class="card-body">
                <h1>Hello {{user.name}}</h1>
                <p class="lead">There are not notes yet!!!</p>
                <a href="/notes/add" class="btn btn-success btn-block">Create One!!!</a>
            </div>
        </div>
    {{/each}}
</div>